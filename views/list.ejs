<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">

    <!--What were saying here is for each item in the newListItems array
    (that was sent over from the root in app.js) create a form with a div, input,
    and paragraph. Since the default newListItems has 3 bits of data then
    this code will create 3 items.-->
    <% newListItems.forEach((item) => { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                <p><%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
  <% }) %>




